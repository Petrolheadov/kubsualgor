def power(a, n):
    if n == 0:
        return 1
    else:
        return a * power(a, n - 1)

# Example usage
a = float(input("Введите положительное число (a): "))
n = int(input("введите неотрицательное число н (n): "))

result = power(a, n)
print(f"{a} при возведении в степень {n} является: {result}")
