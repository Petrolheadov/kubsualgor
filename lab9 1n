def find_max_index(matrix):
    max_value = float('-inf')
    max_i, max_j = -1, -1
    
    for i in range(len(matrix)):
        for j in range(len(matrix[i])):
            if matrix[i][j] > max_value:
                max_value = matrix[i][j]
                max_i, max_j = i, j
    
    return max_i, max_j

# Get the dimensions of the matrix from the user
n = int(input("Enter the number of rows: "))
m = int(input("Enter the number of columns: "))

# Initialize the matrix with user input
matrix = []
for i in range(n):
    row = list(map(int, input().split()))
    matrix.append(row)

# Find the indices of the maximum element
max_i, max_j = find_max_index(matrix)

# Output the result
print(f"The maximum element is at position ({max_i + 1}, {max_j + 1})")
